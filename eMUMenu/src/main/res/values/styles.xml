<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        the theme applied to the application or activity
        Uses AppCompat to work with earlier devices on API 9 and up
    -->
    <style name="Theme.MyTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/light_blue_500</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/light_blue_700</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/light_blue_50</item>
    </style>
</resources>